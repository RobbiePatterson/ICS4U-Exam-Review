package Mint;

import java.util.Scanner;
public class Mintage {
  
 private Coin coins[]=new Coin[5];
 private int year;

  public Mintage(int yr)
  {
    year=yr;
    mintCoins();
  }
  
  public void mintCoins()
  {
    Scanner input=new Scanner(System.in);
    int lifeSpan;
    int quantity;
    String coinList[]={"Toonies", "Loonies", "Quarters", "Dimes", "Nickels"};
    
    System.out.println("For the "+year+" mintage:");
    for (int i=0;i<coins.length;i++)
    {
      System.out.println("How many "+coinList[i]+" minted?");
      quantity=input.nextInt();
      System.out.println("Lifespan of these "+coinList[i]+"?");
      lifeSpan=input.nextInt();
      if (i==0)
      {
        coins[i]=new Toonie(lifeSpan,quantity);
      } else if(i==1) {
    	  coins[i]=new Loonie(lifeSpan,quantity);
      } else if(i==2) {
    	  coins[i]=new Quarter(lifeSpan,quantity);
      } else if(i==3) {
    	  coins[i]=new Dime(lifeSpan,quantity);
      } else {
    	  coins[i]=new Nickel(lifeSpan,quantity);
      }     
      
    }
  }
  
  public int getYear()
  {
    return year;
  }
  
  public String toString()
  {
    String output="Mintage Year: "+year+"\n";
    output+="-------------------\n";
    for (int i=0;i<coins.length;i++)
    {
      output+=coins[i];
    }
    return output;
  }
  
  public String getMintageValue() {
	  String output = "Total value of all the coins in the "+year+" mintage: ";
	  for(int i=0;i<coins.length;i++) {
		  coins [i] = new Coin();
		  output+=coins[i].getDenomination() * coins[i].getQuantity();
	  }
	return output;
	  
  }
  

}
